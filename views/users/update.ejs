
<form class="col-xs-12 col-sm-4 col-sm-offset-4 alert alert-warning" role="alert action="/users/<%=session.id%>/update" method="post" enctype="multipart/form-data">
  
  <div class="form-group logo-loginSignup"<%= typeof error != 'undefined' && error.imgUrl ? 'has-error' : '' %>">
                 
      
      <img src="<%= session.imgUrl %>" alt="Avatar" style="width: 200px; border-radius: 30px;">

      <div class="input-group">
          <label class="control-label">Foto</label>
        <span class="input-group-addon"></span>
          
        </span>
      </div>
      <% if (typeof(error) != 'undefined' && error.imgUrl) { %>
        <label class="control-label">
          <%= error.imgUrl %>
        </label>
        <% } %>

        <input type="file" name="avatar">
  <div class="form-group logo-loginSignup">
      <label for="exampleInputEmail1">Name</label>
      <input type="text" name= "name"value="<%=session.name%>" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" placeholder="Enter name">
      </div>
      <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email"name= "email" value="<%=session.email%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" readonly>
            </div>
            
            <div class="form-group">
              <label for="exampleInputEmail1">country</label>
              <input type="text" name="country"  value="<%=session.country%>" class="form-control" id="exampleInputcountry1" aria-describedby="countryHelp" placeholder="Enter country">
              </div>   
            

            
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<form class="col-xs-12 col-sm-4 col-sm-offset-4" action="/users/<%=session.id%>/delete" method="post">
    <button type="submit" class="btn btn-danger"> Delete </button>
</form>
</div>

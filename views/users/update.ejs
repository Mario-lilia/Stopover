<form class="col-xs-12 col-sm-4 col-sm-offset-4  alert-success btn-delete" role="alert" action="/users/<%=session.id%>/update" method="post"
  enctype="multipart/form-data">

  <div class="form-group logo-loginSignup" <%=typeof error !='undefined' && error.imgUrl ? 'has-error' : '' %>">


    <img src="<%= session.imgUrl %>" alt="Avatar" style="width: 200px; border-radius: 30px;">

    <div class="input-group">

      <span class="input-group-addon">
        <i class="fa fa-camera"></i>
      </span>
      <input type="file" name="avatar">



      <% if (typeof(error) != 'undefined' && error.imgUrl) { %>
        <label class="control-label">
          <%= error.imgUrl %>
        </label>
        <% } %>

    </div>
    <div class="form-group logo-loginSignup ">
      <label for="exampleInputEmail1">Name</label>
      <input type="text" name="name" value="<%=session.name%>" class="form-control" id="exampleInputName1" aria-describedby="nameHelp"
        placeholder="Enter name">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input type="email" name="email" value="<%=session.email%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
        placeholder="Enter email" readonly>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">country</label>
      <input type="text" name="country" value="<%=session.country%>" class="form-control" id="exampleInputcountry1" aria-describedby="countryHelp"
        placeholder="Enter country">
    </div>



    <button type="submit" class="btn btn-success">Update</button>
  </div>
</form>


  <form class="col-xs-12 col-sm-4 col-sm-offset-4" action="/users/<%=session.id%>/delete" method="post">
    <div class="btn-delete alert alert-danger">
    <button type="submit" class="btn btn-danger btn-block"> Delete </button>
    <label for="">Once you deleted it, you cannot get it back</label>
  </div>
  </form>

          <form class="col-xs-12 col-sm-4 col-sm-offset-4 alert alert-info btn-delete" role="alert formsLogo-loginSignup"action="/auth/signup" method="POST">
            <div class="form-group logo-loginSignup">

                <img src="https://lh3.ggpht.com/o-UfAXzPTYATMDtS8Jv2fN4Hp_xX_8B94aPaQeeCvKedp4CMfib-eZl_CCalIBRX31o=w300" alt="">
            </div>
                  
               
               
            <div class="form-group <%= typeof error != 'undefined' && error.name ? 'has-error' : '' %>">
                <label for="exampleInputPassword1">Name</label>
                <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-user"></i>
                </span>
                <input type="text" name="name" class="form-control" placeholder="name" value="<%= typeof user != 'undefined' && user.name ? user.name : '' %>">
              </div>
              <% if (typeof(error) != 'undefined' && error.name) { %>
                <label class="control-label"> <%= error.name %> </label>
              <% } %>
            </div>
      
            <div class="form-group <%= typeof error != 'undefined' && error.email ? 'has-error' : '' %>">
                <label for="exampleInputPassword1">Email</label>
                <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-envelope"></i>
                </span>
                <input type="email" name="email" class="form-control" placeholder="email" value="<%= typeof user != 'undefined' && user.email ? user.email : '' %>">
              </div>
              <% if (typeof(error) != 'undefined' && error.email) { %>
                <label class="control-label">
                  <%= error.email %>
                </label>
                <% } %>
            </div>
      
            <div class="form-group <%= typeof error != 'undefined' && error.password ? 'has-error' : '' %>">
                <label for="exampleInputPassword1">Password</label>   
                <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-lock"></i>
                </span>
                <input type="password" name="password" class="form-control" placeholder="Password">
              </div>
              <% if (typeof(error) != 'undefined' && error.password) { %>
                <label class="control-label"><%= error.password %></label>
              <% } %>
            </div>
              <button type="submit" class="btn btn-primary">Signup</button>
            
          </form>
       
      